<table class='table table-striped'>
    <tr>
        <th>Jméno</th>
        <th>Místnost</th>
        <th>Vyplata</th>
        <th>Pozice</th>
        <th>Actions</th>
    </tr>

    {{#employees}}
        <tr>
            <td>
                <a href='detail.php?employeeId={{employee_id}}'> {{surname}} {{name}}</a>
            </td>
            <td>{{room}}</td>
            <td>{{wage}}</td>
            <td>{{job}}</td>
            {{#isAdmin}} 
            <td>
                <form action="update.php" method="get" style="display: inline-block"> 
                    <input type="hidden" name="employeeId" value="{{employee_id}}">
                    <input type="submit" value="Upravit" class="btn btn-info">
                </form>
                <form action="delete.php" method="post" style="display: inline-block">
                    <input type="hidden" name="employeeId" value="{{employee_id}}">
                    <input type="submit" value="Smazat" class="btn btn-danger" onclick="return confirm('Opravdu chcete smazat zaměstnance?\nAkce je nevratná!');">
                </form>
            </td>

        </tr>
        {{/isAdmin}} 
    {{/employees}}
    {{^employees}}
        <tr><td colspan="3">Databáze je prázdná</td></tr>
    {{/employees}}

</table>
{{#isAdmin}} 
<a href="create.php" class="btn btn-primary">Zapsat nového zaměstnance</a>
{{/isAdmin}} 